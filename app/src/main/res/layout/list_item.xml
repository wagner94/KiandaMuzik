<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/trackName"
        android:layout_width="161dp"
        android:layout_height="22dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="8dp"
        android:text="@string/nomeArtista"
        app:layout_constraintStart_toStartOf="@+id/trackCover"
        app:layout_constraintTop_toBottomOf="@+id/trackName" />

    <TextView
        android:id="@+id/trackName"
        android:layout_width="161dp"
        android:layout_height="21dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/tracktitle"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/trackCover"
        android:layout_width="109dp"
        android:layout_height="87dp"
        android:layout_marginStart="4dp"
        android:adjustViewBounds="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vocal_livre" />

    <ImageView
        android:id="@+id/verifiedAccount"
        android:layout_width="26dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="28dp"
        app:layout_constraintBottom_toTopOf="@+id/trackName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095"
        app:srcCompat="@drawable/ic_verified_user_black_18dp" />

    <ImageView
        android:id="@+id/trackDetails"
        android:layout_width="27dp"
        android:layout_height="23dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_details_black_18dp" />

</android.support.constraint.ConstraintLayout>